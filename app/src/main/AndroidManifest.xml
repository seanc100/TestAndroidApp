<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.trusthub.trusthub2" >

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PhotoActivity"
            android:label="@string/title_activity_photo" >
        </activity>
        <activity
            android:name=".VerifyActivity"
            android:label="@string/title_activity_verify" >
        </activity>
        <activity
            android:name=".ConfirmPhotoActivity"
            android:label="@string/title_activity_confirm_photo" >
        </activity>
        <activity
            android:name=".PhoneNumberActivity"
            android:label="@string/title_activity_phone_number" >
        </activity>
        <activity
            android:name=".TrustHubNumberActivity"
            android:label="@string/title_activity_trust_hub_number" >
        </activity>
        <activity
            android:name=".YourTrustHubsActivity"
            android:label="@string/title_activity_your_trust_hubs" >
        </activity>
        <activity
            android:name=".SearchTrustHubsActivity"
            android:label="@string/title_activity_search_trust_hubs" >
        </activity>
        <activity
            android:name=".SearchResultsActivity"
            android:label="@string/title_activity_search_results" >
        </activity>
        <activity
            android:name=".ViewTrustHubUserActivity"
            android:label="@string/title_activity_view_trust_hub_user" >
        </activity>
    </application>

</manifest>
